  </dependencyManagement>

  <dependencies>
    <!-- JBoss AS Dependencies -->
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-server</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-controller</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-jpa-hibernate4</artifactId>
    </dependency>

    <!-- CDI/Weld Dependencies -->
    <dependency>
      <groupId>javax.enterprise</groupId>
      <artifactId>cdi-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-weld</artifactId>
    </dependency>

    <!-- JPA/Hibernate Dependencies -->
    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate-core</artifactId>
    </dependency>

    <!-- JBoss Logging -->
    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging-processor</artifactId>
      <!-- This is a compile-time dependency of this project, but is not needed
        at compile or runtime by other projects that depend on this project. -->
      <optional>true</optional>
    </dependency>

    <!-- PicketLink Dependencies -->
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-idm-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-idm-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-federation</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink.distribution</groupId>
      <artifactId>picketlink-jbas7</artifactId>
    </dependency>
    <dependency>
      <groupId>org.picketlink</groupId>
      <artifactId>picketlink-idm-simple-schema</artifactId>
    </dependency>

    <!-- Test Dependencies -->
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-subsystem-test</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.arquillian.junit</groupId>
      <artifactId>arquillian-junit-container</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.arquillian.protocol</groupId>
      <artifactId>arquillian-protocol-servlet</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-impl-maven</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-api-maven</artifactId>
    </dependency>
    <dependency>
      <groupId>net.sourceforge.htmlunit</groupId>
      <artifactId>htmlunit</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <!-- LDAP Identity Store Test Dependencies -->
    <dependency>
      <groupId>org.picketbox</groupId>
      <artifactId>picketbox-ldap</artifactId>
      <version>${version.picketbox.ldap}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.picketbox</groupId>
      <artifactId>picketbox-ldap</artifactId>
      <version>${version.picketbox.ldap}</version>
      <scope>test</scope>
      <type>test-jar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${version.surefire.plugin}</version>
          <configuration>
            <skip>true</skip>
          </configuration>
          <!-- Test execution for unit tests. -->
          <executions>
            <execution>
              <id>unit-test</id>
              <phase>test</phase>
              <goals>
                <goal>test</goal>
              </goals>
              <configuration>
                <skip>false</skip>
                <excludes>
                  <exclude>test/**/integration/*TestCase.java</exclude>
                </excludes>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-checkstyle-plugin</artifactId>
          <version>${version.checkstyle.plugin}</version>
          <configuration>
            <configLocation>jboss-as-checkstyle/checkstyle.xml</configLocation>
            <consoleOutput>true</consoleOutput>
            <failsOnError>true</failsOnError>
            <useFile/>
          </configuration>
          <dependencies>
            <dependency>
              <groupId>org.wildfly</groupId>
              <artifactId>wildfly-build-config</artifactId>
              <version>${version.wildfly}</version>
            </dependency>
          </dependencies>
          <executions>
            <execution>
              <id>check-style</id>
              <phase>compile</phase>
              <goals>
                <goal>checkstyle</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>integration-tests</id>
      <properties>
        <integration.tests.containers.dir>${basedir}/target/integration-tests/containers
        </integration.tests.containers.dir>
        <jboss.as.home>${integration.tests.containers.dir}/${version.jboss_as.distribution}</jboss.as.home>
        <jboss.modules.dir>${jboss.as.home}/modules/system/layers/base</jboss.modules.dir>
      </properties>
      <dependencies>
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-arquillian-container-managed</artifactId>
          <scope>test</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <!-- The tests are organized in Unit Tests and Integration Tests. -->

          <!-- Create jars for custom modules used during the tests -->
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>${version.assembly.plugin}</version>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/test/assembly/modules/org/picketlink/test/assembly.xml</descriptor>
                <descriptor>${basedir}/src/test/assembly/modules/org/picketlink/multiconfig/assembly.xml</descriptor>
              </descriptors>
            </configuration>
            <executions>
              <execution>
                <id>make-assembly</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <!-- Extract the AS distribution and update the PicketLink modules libraries-->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.jboss.as</groupId>
                      <artifactId>jboss-as-dist</artifactId>
                      <version>${version.jboss_as.dist}</version>
                      <type>zip</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>${integration.tests.containers.dir}</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>copy</id>
                <phase>package</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-idm-simple-schema</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/idm/schema/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-idm-api</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/idm/api/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-idm-impl</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/idm/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-api</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/core/api/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-impl</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/core/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-config</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/config/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-common</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/common/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink</groupId>
                      <artifactId>picketlink-federation</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/federation/main
                      </outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.picketlink.distribution</groupId>
                      <artifactId>picketlink-jbas7</artifactId>
                      <version>${version.picketlink}</version>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>
                        ${jboss.modules.dir}/org/picketlink/federation/bindings/main
                      </outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <!-- This plugin execute some transformations in the standalone.xml
              in order to run the integration tests. -->
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>xml-maven-plugin</artifactId>
            <version>1.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>transform</goal>
                </goals>
                <configuration>
                  <transformationSets>
                    <transformationSet>
                      <dir>${jboss.as.home}/standalone/configuration/</dir>
                      <outputDir>${jboss.as.home}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone.xml</include>
                      </includes>
                      <stylesheet>src/test/resources/xslt/addExtension.xslt</stylesheet>
                    </transformationSet>
                    <transformationSet>
                      <dir>${jboss.as.home}/standalone/configuration/</dir>
                      <outputDir>${jboss.as.home}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone.xml</include>
                      </includes>
                      <stylesheet>src/test/resources/xslt/addSubsystem.xslt</stylesheet>
                    </transformationSet>
                    <transformationSet>
                      <dir>${jboss.as.home}/standalone/configuration/</dir>
                      <outputDir>${jboss.as.home}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone.xml</include>
                      </includes>
                      <stylesheet>src/test/resources/xslt/addDataSources.xslt</stylesheet>
                    </transformationSet>
                    <transformationSet>
                      <dir>${jboss.as.home}/standalone/configuration/</dir>
                      <outputDir>${jboss.as.home}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone.xml</include>
                      </includes>
                      <stylesheet>src/test/resources/xslt/addSecurityDomain.xslt</stylesheet>
                    </transformationSet>
                  </transformationSets>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <!-- Copy all module definitions and update the extension module with the packaged jar -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.7</version>
            <executions>
              <execution>
                <id>update-test-module</id>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <target>
                    <!-- Copy the extension jar -->
                    <copy file="target/${project.artifactId}-${project.version}.jar"
                          todir="${jboss.modules.dir}/org/picketlink/as/extension/main"/>

                    <!-- Copy the modules used during the tests -->
                    <copy file="target/${project.artifactId}-${project.version}-test-module.jar"
                          todir="${jboss.modules.dir}/org/picketlink/test/main"/>
                    <copy file="target/${project.artifactId}-${project.version}-multi-config-module.jar"
                          todir="${jboss.modules.dir}/org/picketlink/test/multiconfig/main"/>

                    <!-- Copy all module definitions -->
                    <copy todir="${jboss.modules.dir}/org/picketlink">
                      <fileset dir="${basedir}/src/test/modules/org/picketlink"/>
                    </copy>
                  </target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>maven-surefire-plugin</artifactId>
              <version>${version.surefire.plugin}</version>
              <executions>
                <!-- Test execution for integration tests. -->
                <execution>
                  <id>integration-test</id>
                  <phase>integration-test</phase>
                  <goals>
                    <goal>test</goal>
                  </goals>
                  <configuration>
                    <skip>false</skip>
                    <systemPropertyVariables>
                      <jbossHome>${jboss.as.home}</jbossHome>
                    </systemPropertyVariables>
                    <includes>
                      <include>**/integration/*TestCase.java</include>
                    </includes>
                    <properties>
                      <property>
                        <name>listener</name>
                        <value>test.org.picketlink.as.subsystem.util.LDAPServerRunListener</value>
                      </property>
                    </properties>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
    <profile>
      <id>arquillian-remote</id>
      <dependencies>
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-arquillian-container-remote</artifactId>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>


